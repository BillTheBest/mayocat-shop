
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.mayocat</groupId>
    <artifactId>mayocat-parent</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <artifactId>mayocat-application</artifactId>
  <packaging>jar</packaging>

  <name>Mayocat Application</name>
  <description>Packaging of the MayocatShop application around DropWizard</description>

  <dependencies>

    <dependency>
      <groupId>org.mayocat</groupId>
      <artifactId>mayocat-base</artifactId>
      <version>${project.version}</version>
    </dependency>  
    <dependency>
      <groupId>org.mayocat</groupId>
      <artifactId>mayocat-authorization</artifactId>
      <version>${project.version}</version>
    </dependency>  
    <dependency>
      <groupId>org.mayocat</groupId>
      <artifactId>mayocat-rest</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.mayocat</groupId>
      <artifactId>mayocat-store-api</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.mayocat</groupId>
      <artifactId>mayocat-store-datanucleus-model</artifactId>
      <version>${project.version}</version>
      <exclusions>
        <exclusion>
          <!-- We want the enhanced version instead -->
          <groupId>org.mayocat</groupId>
          <artifactId>mayocat-model</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.mayocat</groupId>
      <artifactId>mayocat-store-datanucleus-store</artifactId>
      <version>${project.version}</version>
      <exclusions>
        <exclusion>
          <!-- We want the enhanced version instead -->
          <groupId>org.mayocat</groupId>
          <artifactId>mayocat-model</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.mayocat</groupId>
      <artifactId>mayocat-configuration</artifactId>
      <version>${project.version}</version>
    </dependency>
        
    <!-- Testing dependencies -->
    <dependency>
      <groupId>org.xwiki.commons</groupId>
      <artifactId>xwiki-commons-test</artifactId>
      <version>${xwiki.version}</version>
      <scope>test</scope>
    </dependency>
    
    <!-- Need to drag this for some reason -->
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
      <version>1.0.6</version>
    </dependency>
    
    <!-- Used to mock configuration classes -->
    <dependency>
      <groupId>org.jmock</groupId>
      <artifactId>jmock-legacy</artifactId>
      <version>2.5.1</version>
    </dependency>
  </dependencies>

 
  <build>

    <resources>
        <resource>
            <directory>src/main/resources</directory>
            <filtering>true</filtering>
        </resource>
    </resources>

    <plugins>

       <!-- Step 1 : copy datanucleus in target/lib -->
       <plugin>
         <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-dependency-plugin</artifactId>
         <version>2.4</version>
         <executions>
           <execution>
             <id>unpack</id>
             <phase>process-sources</phase>
             <goals>
               <goal>copy-dependencies</goal>
             </goals>
             <configuration>
               <includeGroupIds>org.datanucleus</includeGroupIds>
               <outputDirectory>${project.build.directory}/lib</outputDirectory> 
             </configuration>
           </execution>
         </executions>
       </plugin>

      <!-- Step 2 : shade everything else -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.4</version>
        <configuration>

          <createDependencyReducedPom>true</createDependencyReducedPom>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>org.datanucleus:*</exclude>
                  <exclude>datanucleus:rdbms</exclude>
                  <exclude>datanucleus:api</exclude>
                </excludes>
              </artifactSet>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                  <resource>META-INF/components.txt</resource>
                </transformer>
                <!--
                <transformer implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                  <resource>META-INF/MANIFEST.MF</resource>
                </transformer>
                <transformer implementation="org.apache.maven.plugins.shade.resource.XmlAppendingTransformer">
                  <resource>plugin.xml</resource>
                </transformer>
                -->
                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <mainClass>org.mayocat.shop.application.MayocatShopService</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>hsqldb</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.hsqldb</groupId>
          <artifactId>hsqldb</artifactId>
          <version>2.0.0</version>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>mysql</id>
      <dependencies>
        <dependency>
          <groupId>mysql</groupId>
          <artifactId>mysql-connector-java</artifactId>
          <version>5.1.21</version>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
</project>
